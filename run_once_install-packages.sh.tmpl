# Function to install packages with progress
install_with_progress() {
  local packages=($@)
  local total=${#packages[@]}
  local current=0
  local failed_packages=()
  
  echo "üì¶ Installing $total packages..."
  
  # Ensure brew is in PATH
  export PATH="/usr/local/bin:$PATH"
  
  for package in "${packages[@]}"; do
    current=$((current + 1))
    echo "[$current/$total] Installing $package..."
    
    if brew list "$package" &>/dev/null; then
      echo "  ‚úÖ $package already installed"
    else
      echo "  üîÑ Installing $package..."
      if brew install "$package" 2>&1; then
        echo "  ‚úÖ $package installed successfully"
      else
        echo "  ‚ùå Failed to install $package"
        failed_packages+=("$package")
      fi
    fi
    echo ""
  done
  
  if [ ${#failed_packages[@]} -gt 0 ]; then
    echo "‚ö†Ô∏è  Failed to install: ${failed_packages[*]}"
    echo "You can retry these manually: brew install ${failed_packages[*]}"
  fi
}

